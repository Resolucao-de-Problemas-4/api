generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  birthday DateTime
  address  String
  password String
}

model driver {
  id          String  @id @default(uuid())
  name        String
  CNH         String  @unique
  address     String
  phoneNumber String
  email       String  @unique
  status      Boolean @default(false)
  password    String
  carSigned   Boolean @default(false)
  car         car[]
}

model car {
  plate    String  @id @unique
  ownerCNH String
  chassi   String
  renavan  String
  year     Int
  model    String
  marca    String
  status   Boolean @default(false)
  driver   driver  @relation(fields: [ownerCNH], references: [CNH])
}

model race {
  id                  String   @id @default(uuid())
  idCliente           String
  idDriver            String?
  dataViagem          DateTime
  horaSolicitacao     String
  horaInicial         String?
  horaFinal           String?
  valorViagem         Float?
  pagamentoAutorizado Boolean?
  latitudeOrigem      String
  longitudeOrigem     String
  latitudeFinal       String
  longitudeFinal      String
  avaliacaoViagem     Int?
  viagemConcluida     Boolean  @default(false)
  corridaAceita       Boolean  @default(false)
}
