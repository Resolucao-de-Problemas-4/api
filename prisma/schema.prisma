generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  birthday     DateTime
  address      String
  password     String
  localization localization?
  cartao       cartao[]
}

model driver {
  id           String        @id @default(uuid())
  name         String
  CNH          String        @unique
  address      String
  phoneNumber  String
  email        String        @unique
  status       Boolean       @default(false)
  password     String
  carSigned    Boolean       @default(false)
  localization localization?
  car          car[]
}

model car {
  plate    String  @id @unique
  ownerCNH String
  chassi   String
  renavan  String
  year     Int
  model    String
  marca    String
  status   Boolean @default(false)
  driver   driver  @relation(fields: [ownerCNH], references: [CNH])
}

model race {
  id                  String        @id @default(uuid())
  idCliente           String
  idDriver            String?
  dataViagem          DateTime
  horaSolicitacao     String
  horaInicial         String?
  horaFinal           String?
  valorViagem         Float?
  pagamentoAutorizado Boolean?
  latitudeOrigem      String
  longitudeOrigem     String
  latitudeFinal       String
  longitudeFinal      String
  destinoFinal        String?
  avaliacaoViagem     String?
  viagemConcluida     Boolean       @default(false)
  corridaAceita       Boolean       @default(false)
  corridaCancelada    Boolean       @default(false)
  localization        localization?
  rating              rating[]
}

model rating {
  id        String  @id @default(uuid())
  idCorrida String
  rating    Int?
  review    String?
  race      race    @relation(fields: [idCorrida], references: [id])
}

model cartao {
  ID           String @id @default(uuid())
  numero       String @unique
  cvv          String
  dataValidade String
  nome         String
  idUsuario    String
  user         user   @relation(fields: [idUsuario], references: [id])

}

model localization {
  ID          String   @id @default(uuid())
  lat         Float?
  long        Float?
  driverID    String   @unique
  corridaID   String   @unique
  userID      String   @unique
  lastUpdated DateTime
  route       Int      @default(1)
  user        user     @relation(fields: [userID], references: [id])
  race        race     @relation(fields: [corridaID], references: [id])
  driver      driver   @relation(fields: [driverID], references: [id])
}
