// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  name String
  email String
  birthday DateTime
  address String
  password String
}

model driver{
  id Int @id @default(autoincrement())
  name String
  CNH String @unique
  address String
  phoneNumber String
  email String
  status Boolean @default(false)
  password String
  car car[]
}

model car{
  plate String @id
  driver driver @relation(fields: [ownerCNH], references: [CNH])
  ownerCNH String
  chassi String
  renavan String
  year Int
  model String
  marca String
  status Boolean @default(false)
}
