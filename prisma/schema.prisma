generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  birthday DateTime
  address  String
  password String
}

model driver {
  id          Int     @id @default(autoincrement())
  name        String
  CNH         String  @unique
  address     String
  phoneNumber String
  email       String  @unique
  status      Boolean @default(false)
  password    String
  car         car?
}

model car {
  plate    String  @id
  ownerCNH String
  chassi   String
  renavan  String
  year     Int
  model    String
  marca    String
  status   Boolean @default(false)
  driver   driver  @relation(fields: [ownerCNH], references: [CNH])
}

model race{
  id String @id @default(uuid())
  idCliente Int 
  idDriver Int?
  dataViagem DateTime
  horaSolicitacao String
  horaInicial String?
  horaFinal String?
  valorViagem Float?
  pagamentoAutorizado Boolean?
  latitudeOrigem String
  longitudeOrigem String
  latitudeFinal String
  longitudeFinal String
  avaliacaoViagem Int?
  viagemConcluida Boolean @default(false)
  corridaAceita Boolean @default(false)
}
